<resources>
    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="MaterialDrawerTheme">
        <!-- Customize your theme here. -->
        <item name="popupTheme">@style/actionMenu</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorAccent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item> <!-- Material 2 defines 12% alpha, primary color -->
        <item name="material_drawer_selected_legacy">@color/material_drawer_selected</item> <!-- Defines the color if legacy style (Material 1, is enabled) -->
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">@color/material_drawer_header_selection_text</item>
        <item name="material_drawer_header_selection_subtext">@color/material_drawer_dark_header_selection_subtext</item>
        <item name="material_drawer_legacy_style">false</item> <!-- Enables legacy Material 1 style -->
    </style>
    
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title" parent="android:style/TextAppearance"> <!-- не вывышло(( цвет титула не поменялся-->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!--ниже тема для меню по трем точкам-->
    <style name="actionMenu" parent="MaterialDrawerTheme.Light">
        <item name="backgroundColor">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/md_black_1000</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_10dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_horizontal_16dp</item>
        <item name="android:background">@color/material_drawer_divider</item>
    </style>

    <style name="style_text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_16dp</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_10dp</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">@dimen/text_normal_16sp</item>
    </style>

    <style name="style_text_subText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_16dp</item>
        <item name="android:textColor">@color/material_drawer_hint_text</item>
        <item name="android:textSize">@dimen/text_small_14sp</item>
    </style>

    <style name="style_button_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="background">@drawable/ripple_effect</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/MaterialDrawerTheme.Light.DarkToolbar.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>